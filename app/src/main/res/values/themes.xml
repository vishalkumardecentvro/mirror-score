<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.MirrorScore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/brand_color_light</item>
    <item name="colorPrimaryVariant">@color/brand_color_dark</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.App.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
    <item name="colorPrimary">@color/brand_color_light</item>
    <item name="colorPrimaryVariant">@color/brand_color_dark</item>
    <item name="colorOnPrimary">@color/white</item>
  </style>
</resources>